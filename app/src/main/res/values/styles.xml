<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DayOfWeek" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@drawable/text_color_day_picker</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!--<item name="android:gravity">center</item>-->
</resources>
